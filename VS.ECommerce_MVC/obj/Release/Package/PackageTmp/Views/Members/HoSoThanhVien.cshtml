@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
<script src="/Resources/ScripMvc/ThongBao.js"></script>
}

@{Html.RenderAction("Nav_conten", "My_Partialview");}
@using (Html.BeginForm("HoSoThanhVien", "Members", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <h1 class="title-head"><span>Hồ sơ thành viên</span></h1>
        <div class="row">
            <div class="col-lg-6 coldangky">
                <div class="page-login margin-bottom-30">
                    <div id="login">
                        <div id="pagelogin">
                            <div class="group_contact">
                                @*<div style="padding: 10px 10px 10px 10px; color:red">@ViewData["Greeting"]</div>*@
                                @if (TempData["AlertMessage"] != null)
                                {
                                    <div id="AlertBox" class="alert @TempData["AlertType"] Xoa">
                                        @TempData["AlertMessage"]
                                    </div>
                                }
                                <div style="padding: 10px 10px 10px 10px; color:red">@Html.Raw(ViewBag.ThongBao)</div>
                                <div class="form-signup clearfix">
                                    <div class="group_contact row">
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <label class="">@Commond.label("l_name"): </label>
                                            <div class="TextBox">
                                                @Html.TextBox("txtHoTen", (string)ViewBag.Name, new { placeholder = "", @class = "form-control form-control-lg" })
                                            </div>
                                            <p style="color:red;" id="TB_TenKH"></p>
                                        </fieldset>
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <label class="">Email:</label>
                                            <div class="TextBox">
                                                @Html.TextBox("txtemail", (string)ViewBag.Email, new { placeholder ="", @class = "form-control form-control-lg" })
                                            </div>
                                            <p style="color:red;" id="TB_Email"></p>
                                        </fieldset>
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <label class="">Phone:</label>
                                            <div class="TextBox">
                                                @Html.TextBox("txtphone", (string)ViewBag.Phone, new { placeholder = "", @class = "form-control form-control-lg" })
                                            </div>
                                            <p style="color:red;" id="TB_SoDienThoai"></p>
                                        </fieldset>
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <label class="">@Commond.label("lt_birthday"):</label>
                                            <div class="TextBox">
                                                @*@Html.TextBox("txtngaysinh", (string)ViewBag.NgaySinh, new { placeholder = "Ngày sinh", @class = "date form-control form-control-lg" })*@


                                                <div id="date" class="input-group date" data-date-format="dd/mm/yyyy">
                                                    @Html.TextBox("txtngaysinh", (string)ViewBag.NgaySinh, new { placeholder = "Ngày/Tháng/Năm", @class = "form-control" }) <span class="input-group-addon"></span>
                                                </div>

                                            </div>
                                            <p style="color:red;" id="TB_MatKhau"></p>
                                        </fieldset>
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <label class="">@Commond.label("l_address"):</label>
                                            <div class="TextBox">
                                                @Html.TextBox("txtaddress", (string)ViewBag.Address, new { placeholder = "", @class = "date form-control form-control-lg" })

                                                @* @Html.TextBox("txtaddress", (string)ViewBag.Address)*@
                                            </div>
                                            <p style="color:red;" id="TB_DiaChi"></p>
                                        </fieldset>
                                        <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots" style=" display:none">
                                            <label class="">Ảnh đại diện:</label>
                                            <div class="TextBox">
                                                @Html.TextBox("file", "", new { type = "file" }) <br />
                                                <input id="HiddenAnhDaiDien" name="HiddenAnhDaiDien" type="hidden" value="@ViewBag.AnhDaiDiens" />
                                            </div>
                                            <div class="Avata">@Html.Raw(ViewBag.Avata)</div>
                                            <p style="color:red;" id="TB_DiaChi"></p>
                                        </fieldset>
                                        <div style=" clear:both"></div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 cancots">
                                            <input type="submit" value="@Commond.label("l_update")" onclick="return DangKyThanhVien();" class="btnmvc" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<div class="social-login" style="margin-top: 30px; clear: both;">
                    <p>
                        Đăng nhập với Facebook và Google
                    </p>
                    <div class="button-social">
                        <button type="button" class="btsocialloginfb">Facebook</button>
                    </div>
                    <div class="button-social">
                        <button type="button" class="btsociallogingg">Google</button>
                    </div>
                </div>*@
                </div>
            </div>
            <div class="clearfix">
            </div>
        </div>
    </div>
    @Html.Raw(ViewBag.style)
}


<link rel="stylesheet prefetch" href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css">
<script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>

<script type="text/javascript">
    $(function () {
        $("#datepicker").datepicker({
            autoclose: true,
            todayHighlight: true
        });
        $('.date').datepicker({
            autoclose: true,
            todayHighlight: true
        });
    });
</script>