@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://sp.zalo.me/plugins/sdk.js"></script>
@{Html.RenderAction("Nav_conten", "My_Partialview");}
<div class="container">
    <h1 class="title-head"><span>Link affiliate</span></h1>
    <div class="row">
        <div class="col-lg-12 coldangky">
            <div class="page-login margin-bottom-30">
                <div id="login">
                    <span>
                        <p><i class="fa fa-share-alt" aria-hidden="true" style="color: #ff1a1a; "></i> Link giới thiệu đăng ký thành viên </p>
                    </span>
                    <div id="pagelogin">
                        <div class="contact-form">
                            <div class="form-group">
                                <div style="clear: both;"></div>
                                <div class="thongbao1" style="display: none;">
                                    <center>Đã coppy</center>
                                </div>
                                <div class="leftForm rightForm">
                                    <input class="form-control  form-control-lg" data-clipboard-action="copy" data-clipboard-target="#txtlinkgioithieu" id="txtlinkgioithieu" name="txtlinkgioithieu" type="text" value="@ViewBag.txtlinkgioithieu">
                                </div>
                                <p>
                                    @Html.Partial("~/Views/AllPage/Box_ShareMangxahoi.cshtml")
                                    @Html.Raw(ViewBag.ltshare)
                                    @*@Html.Raw(Commond.Setting("txtnoidunglink"))*@
                                    <br /><br /><br />
                                </p>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>
<script src="/Resources/js/clipboard.min.js"></script>
<script language="JavaScript" type="text/javascript">
    var clipboard = new Clipboard('#txtlinkgioithieu');
    clipboard.on('success', function (e) {
        $('.thongbao1').show();
        setTimeout(function () {
            $('.thongbao1').hide();
        }, 1000);
    });
</script>
